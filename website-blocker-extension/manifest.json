{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "description": "Stay focused on one website - blocks everything else during study sessions",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
